name: Deploy Preview to External Repo

on:
  push:
    branches: [main]
  workflow_dispatch:

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout source
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'

      - name: Build j3m-ui package
        working-directory: packages/j3m-ui
        run: |
          npm ci
          npm run build

      - name: Install and build preview
        working-directory: preview
        run: |
          npm ci
          npm run build

      - name: Deploy to external repo
        uses: peaceiris/actions-gh-pages@v4
        with:
          # Create a Personal Access Token with repo permissions
          personal_token: ${{ secrets.DEPLOY_TOKEN }}
          external_repository: YOUR_USERNAME/YOUR_PAGES_REPO
          publish_branch: main  # or gh-pages
          publish_dir: ./preview/dist
          user_name: 'github-actions[bot]'
          user_email: 'github-actions[bot]@users.noreply.github.com'
